<div class="container">
    <div class="animated slideInRight row">
        <h1 class="text-center">Sign up!</h1>
        <div class="form-style">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name ="name" placeholder="new campground"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image URL"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Describe it"></input>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit</button>
            <a href="/campgrounds">Back to campgrounds</a>
        </form>
        </div>
    </div>

</div>
